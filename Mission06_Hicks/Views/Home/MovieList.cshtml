@model IEnumerable<Mission06_LastName.Models.Movie>

@{
    ViewData["Title"] = "MovieList";
}

<h1>MovieList</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>CopiedToPlex</th>
            <th>LentTo</th>
            <th>Notes</th>
            <th>Actions</th> <!-- Add this header for the delete button -->
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a>
                </td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@movie.Edited</td>
                <td>@movie.CopiedToPlex</td>
                <td>@movie.LentTo</td>
                <td>@movie.Notes</td>
                <td>
                    <form asp-action="DeleteMovie" method="post">
                        <input type="hidden" name="id" value="@movie.Id" />
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this?');" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
