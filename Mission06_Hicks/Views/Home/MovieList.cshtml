@model IEnumerable<Mission06_LastName.Models.Movie>

@{
    ViewData["Title"] = "Movie List";
}

<div class="container mt-5">
    <h1 class="mb-3">@ViewData["Title"]</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>CopiedToPlex</th>
                <th>LentTo</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a>
                    </td>
                    <td>@movie.Category?.CategoryName</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td>@movie.Edited</td>
                    <td>@movie.CopiedToPlex</td>
                    <td>@movie.LentTo</td>
                    <td>@movie.Notes</td>
                    <td>
                        <form asp-action="DeleteMovie" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@movie.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this?');">Delete</button>
                        </form>
                        <a href="@Url.Action("Edit", new { id = movie.Id })" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
